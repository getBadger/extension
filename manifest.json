{
  "manifest_version": 3,
  "name": "getBadger: Save Money with Discount Codes & Coupons",
  "description": "Badger saves you money by applying the best available discounts at checkout.",
  "version": "1.0.7",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/badger_icon_16.png",
      "32": "images/badger_icon_32.png",
      "48": "images/badger_icon_48.png",
      "128": "images/badger_icon_128.png"
    },
    "default_title": "Click to open panel"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
  {
    "js": ["content-script.js"],
    "matches": [
      "*://www.amazon.com/gp/buy/*",
      "*://www.allbirds.com/checkout*",
      "*://*.wixsite.com/*/checkout*"
    ]
  }
],
  "host_permissions": [ 
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [{
    "resources": ["images/*"],
    "matches": ["<all_urls>"]
  }]
}

